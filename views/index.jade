extends layout

block content

  div(
    id='button-container'
  )
    button(
      type='button'
      id='create-room'
    ) Create Room
    button(
      type='button'
      id='join-button'
    ) Join Room

  div(
    id='join-room'
  )
    form(
      class='join-form'
    )
      input(
        type='text'
        placeholder='Room Id'
      )
      button(
        type='submit'
      ) Join
